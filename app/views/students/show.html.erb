<div class="row top-padding">
  <div class="col s12 m6 l4">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Name: <%= @student.name %></span>
        <p>Email: <%= @student.email %></p>
        <br>
        <p>Course Enrollments:
          <% if @student.courses.empty? %>
            None
          <% else %>
            <ul class="enrollments"> 
              <% @student.courses.each do |course| %>
                <li class="enrollment"><%= course.name %></li>
              <% end %>
            </ul>
          <% end %>
        </p>

      </div>
    </div>
    <% if current_user == @student %>
      <%= link_to '<i class="material-icons right">create</i>Edit your profile'.html_safe, edit_student_path(@student), class: 'btn waves-effect waves-light' %>
    <% end %>
  </div>
</div>