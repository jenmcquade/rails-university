<% if @student.errors.any? %>
  <div class="container">
    <div class="row sign-up-form">
      <div class="col s12">
        <div class="card-panel red lighten-2 white-text">
          <div class="center">
            <strong><%= pluralize(@student.errors.count, "error") %>
                prohibited your profile from being created</strong>
          </div>
          <ul>
            <% @student.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12">
      <div class="row">
        <div class="card-panel">
          <div class="card-title">
            <h3 class="header">Sign Up</h3>
          </div>
          <div class="row">
            <%= form_for(@student, html: { class: 'col s12' }) do |f| %>
              <div class="row">
                <div class="input-field col s12">
                  <%= f.text_field :name, placeholder: "Enter your full name", autofocus: true %>
                  <%= f.label :name, class: 'active' %>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <%= f.email_field :email, placeholder: "Enter your email address", autofocus: true %>
                  <%= f.label :email, class: 'active' %>
                </div>
              </div>
              <div class="row">
                <div class="col s12">
                  <%= f.submit "Sign up", class: 'btn orange waves-effect waves-light right' %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

